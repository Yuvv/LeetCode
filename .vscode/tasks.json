{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Go File...",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "${file}"
            ],
            "problemMatcher": [
                "$go"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Python File...",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation":{
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}